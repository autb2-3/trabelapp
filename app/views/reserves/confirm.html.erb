<h1>予約確認</h1>

<dl>
	<dt>開始日</dt>
	<dd><%= @reserve.start_date %></dd>
	<dt>終了日</dt>
	<dd><%= @reserve.end_date %></dd>
	<dt>予約人数</dt>
	<dd><%= @reserve.nunmber_people %></dd>
</dl>

<%= form_for @reserve, method: :room, url: reserve_back_path do |form| %>
	<%= form.hidden_field :start_date %>
	<%= form.hidden_field :end_date %>
	<%= form.hidden_field :number_people %>
	<%= form.submit '入力画面に戻る' %>
<% end %>
<%= form_for @reserve, method: :room, url: reserve_complete_path do |form| %>
	<%= form.hidden_field :start_date %>
	<%= form.hidden_field :end_date %>
	<%= form.hidden_field :number_people %>
	<%= form.submit '送信する' %>
<% end %>