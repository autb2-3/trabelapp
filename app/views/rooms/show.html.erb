<h3>ルーム詳細</h3>
 
    <table>
      <tr>
        <th>ルーム名</th>
        <td><%= @room.room_name %></td>
      </tr>
      <tr>
        <th>ルーム紹介</th>
        <td><%= @room.room_info %></td>
      </tr>
      <tr>
        <th>値段</th>
        <td><%= @room.room_price %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @room.room_place %></td>
      </tr>
      <tr>
        <th>ルーム画像</th>
        <td>
          <td><%= image_tag @room.room_image , :size =>'500x400' %></td>
        </td>
      </tr>
    </table>

<h3>ルーム予約</h3>
 
    <%= form_with model: @reserve do |f| %>
      <table>
        <tr>
          <th><%= f.label :start_date ,"開始日" %></th>
          <td><%= f.date_select :start_date %></td>
        </tr>
 
        <tr>
          <th><%= f.label :end_date ,"終了日" %></th>
          <td><%= f.date_select :end_date %></td>
        </tr>
 
        <tr>
          <th><%= f.label :number_people ,"人数" %></th>
          <td><%= f.number_field :unmber_people , min: 1 %></td>
        </tr>
      </table>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.hidden_field :room_id, value: @room.id %>
      <div>
        <ul>
          <li><%= f.submit "予約"%></li>
        </ul>
      </div>
    <% end %>