<h3>登録済みルーム一覧</h3>
 
    <table>
      <thead>
        <tr>
          <th>ルーム画像</th>
          <th>ルーム名</th>
          <th>ルーム紹介</th>
          <th>料金</th>
          <th>住所</th>
          <th>作成日</th>
          <th>詳細</th>
          <th>削除</th>
        </tr>
      </thead>
 
      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td><%= image_tag room.room_image , :size =>'200x150' %></td>
            <td><%= room.room_name %></td>
            <td><%= room.room_info %></td>
            <td><%= room.room_price %></td>
            <td><%= room.room_place %></td>
            <td><%= room.created_at %></td>
            <td><%= link_to "詳細", room %></td>
            <td><%= link_to "削除", room, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
 